selectById:
SELECT *
FROM Event
WHERE id = ?;

selectBySlug:
SELECT *
FROM Event
WHERE slug = ?;

deleteBySlug:
DELETE FROM Event
WHERE slug = ?;

insert:
INSERT INTO Event (
    currency,
    date_from,
    date_to,
    has_subevents,
    json_data,
    live,
    slug
)
VALUES (
    ?,
    ?,
    ?,
    ?,
    ?,
    ?,
    ?
);

updateFromJson:
UPDATE Event
SET
    currency = ?,
    date_from = ?,
    date_to = ?,
    has_subevents = ?,
    json_data = ?,
    live = ?
WHERE slug = ?;
