import kotlin.Long;

CREATE TABLE Item (
    id serial AS Long PRIMARY KEY,
    active boolean NOT NULL,
    admission boolean NOT NULL,
    category_id bigint,
    checkin_text text,
    event_slug character varying(255),
    json_data text,
    picture_filename character varying(255),
    "position" bigint,
    server_id bigint NOT NULL,
    ticket_layout_id bigint,
    ticket_layout_pretixpos_id bigint
);

CREATE INDEX Item_server_id_index ON Item (server_id);